extends tex-templates

global !p
def math():
	return vim.eval('vimtex#syntax#in_mathzone()') == '1'

def comment():
	return vim.eval('vimtex#syntax#in_comment()') == '1'

def env(name):
	[x,y] = vim.eval("vimtex#env#is_inside('" + name + "')")
	return x != '0' and x != '0'
endglobal

snippet equation "Environment: Equation" b
\begin{equation}
	${0}
\end{equation}
endsnippet

snippet gather "gather math to center it" b
\begin{gather*}
	${0}
\end{gather*}
endsnippet

snippet proof "Environment: Proof" b
\begin{proof}
	${0}
\end{proof}
endsnippet

snippet algorithm "Environment: algorithm" b
\begin{algorithm} \caption{\textsc{${1:AlgName}} (${2:Args})}\label{alg:seb}
	{\bf Input:} $3\\\\
	{\bf Output:} $4
	\begin{algorithmic}[1]
		\State$$5$
	\end{algorithmic}
\end{algorithm}
$0
endsnippet

snippet simalg "Simple Algorithm" wA
\begin{algorithmic}[1]
	\State$$1$
\end{algorithmic}
endsnippet

snippet ,ss "new state" bA
\State$$1$
$0
endsnippet

snippet while "While block" b
\While{$$1$}
	$2
\EndWhile\\\\
$0
endsnippet

snippet for "for block" b
\For{$$1$}
	$2
\EndFor{}
$0
endsnippet
snippet if "if block" b
\If{$$1$}
	$2
\EndIf{}
$0
endsnippet

snippet alln "All numbers symbol" wA
\mathbb{$1} $0
endsnippet

snippet malln "All numbers symbol in math" wA
$\mathbb{$1}$ $0
endsnippet

snippet bf "Sets up bf" wA
{\bf $1} $0
endsnippet

snippet dd "Display math" wA
\[
	${0}
\]
endsnippet

snippet align "Environment: Align"
\begin{align}
	${0}
\end{align}
endsnippet

# context "math()"
snippet ,ff "Fraction" iA
\frac{${1:numer}}{${2:denom}}${0}
endsnippet

snippet ,c "cdot instead of asterisk" iA
\cdot ${0}
endsnippet

snippet ,m "math dollar signs" iA
$$1$$0
endsnippet

snippet /\_\_/ "Subscript" riA
_{$1}$0
endsnippet

snippet /\^\^/ "Superscript" riA
^{$1}$0
endsnippet

# Commands and similar

snippet sec
\section{$1}$0
endsnippet

snippet sub
\subsection{$1}$0
endsnippet

snippet subsub
\subsubsection{$1}$0
endsnippet

