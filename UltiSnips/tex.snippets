# Environments

snippet begin "begin{} / end{}"
\begin{${1:name}}
	${0}
\end{$1}
endsnippet

snippet recursivedef "define recursive equation" bA
\[ T (n) = \begin{cases}
		1        & n=1  \\\\
		T($1 & n>1.
	\end{cases}
\]
endsnippet

snippet itemize
\begin{itemize}
	\item ${0}
\end{itemize}
endsnippet

snippet enumerate
\begin{enumerate}
	\item ${0}
\end{enumerate}
endsnippet

snippet description
