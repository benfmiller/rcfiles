# increase region size
# ctrl + shift + alt - h : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
# ctrl + shift + alt - j : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
# ctrl + shift + alt - k : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
# ctrl + shift + alt - l : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# # decrease region size
# alt + shift + cmd - h : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
# alt + shift + cmd - j : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
# alt + shift + cmd - k : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
# alt + shift + cmd - l : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# # mirror tree y-axis
cmd + ctrl + shift - y : yabai -m space --mirror y-axis

# # mirror tree x-axis
cmd + ctrl + shift - x : yabai -m space --mirror x-axis

# balance size of windows
cmd + ctrl + shift - 0 : yabai -m space --balance


# change layout of desktop
cmd + ctrl + alt - e : yabai -m space --layout bsp
cmd + ctrl + alt - l : yabai -m space --layout float
cmd + ctrl + alt - s : yabai -m space --layout stack


# cycle through stack windows
# alt - p : yabai -m window --focus stack.next || yabai -m window --focus south
# alt - n : yabai -m window --focus stack.prev || yabai -m window --focus north

# forwards
cmd + ctrl - p : yabai -m query --spaces --space \
            | jq -re ".index" \
            | xargs -I{} yabai -m query --windows --space {} \
            | jq -sre "add | map(select(.minimized != 1)) | sort_by(.display, .frame.y, .frame.x, .id) | reverse | nth(index(map(select(.focused == 1))) - 1).id" \
            | xargs -I{} yabai -m window --focus {}

# backwards
cmd + ctrl - n : yabai -m query --spaces --space \
            | jq -re ".index" \
            | xargs -I{} yabai -m query --windows --space {} \
            | jq -sre "add | map(select(.minimized != 1)) | sort_by(.display, .frame.y, .frame.y, .id) | nth(index(map(select(.focused == 1))) - 1).id" \
            | xargs -I{} yabai -m window --focus {}


# close focused window
cmd + ctrl - q : yabai -m window --close


# enter fullscreen mode for the focused container
cmd + ctrl - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
cmd + ctrl + shift - f : yabai -m window --toggle native-fullscreen

cmd + shift - return : open -a Terminal $HOME
